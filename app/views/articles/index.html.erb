<h1>Listing articles</h1>

<%= link_to 'New article', new_article_path %>
 
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr id="article-<%= article.id %>">
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default btn-xs'  %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, class: 'btn btn-xs btn-danger' %></td>
    </tr>
  <% end %>
</table>

